    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>GPS fungerer ikke, må håndtere rettigheter bedre -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/faviconcircular"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/faviconcircular"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        android:usesCleartextTraffic="true"> <!-- Trengs for å lese info fra Askeladden og liknende databaser-->
        <!--android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:permission.ACCESS_COARSE_LOCATION="true"
        android:android.permission.ACCESS_FINE_LOCATION="true" -->
        <activity android:name=".SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

        <activity android:name=".MainActivity" />

    </application>

</manifest>
